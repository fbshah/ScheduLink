
<%= form_for @shift do |f| %>
    <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date, class: "datepicker"%>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.text_field :start_time, class: "timepicker" %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.text_field :end_time, class: "timepicker"%>
  </div>
  <div class="field">
    <%= f.label :department %><br>
    <%= f.text_field :department %>
  </div>
  <div class="field">
    <%= f.label :break%><br>
    <%= f.text_field :break%>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>