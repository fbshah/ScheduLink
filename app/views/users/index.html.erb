<div class = "row row-centered">
<%= link_to 'Add New User', new_user_path, :class => "btn btn-success" %> 
</div>

 <div class = "row">
  <div class = "col-md-3">
    <h5>User List</h5>
  </br>
  </div>
  <div class = "col-md-3">
    <h5>Remaining Hours</h5>
  </br>
  </div>
</div>
    

 <% @users.each do |user| %>
 <div class = "row">
 	<div class = "col-md-3">
    <p> <%= link_to user.full_name, user_shifts_path(user) %>
    	</div>
			<div class = "col-md-3">
        <p><%= user.remaining_hours %> hours remaining</p>
			</div>
			<div class = "col-md-3">
    			<%= link_to "Edit User", edit_user_path(user), :class => "btn btn-info" %>
    		</div>
    		<div class = "col-md-3">
    			<%= link_to "Delete User", user, :confirm => "Are you sure?", :method => :delete, :class => "btn btn-danger" %>
  		</div>
			</div>
<% end %>




  