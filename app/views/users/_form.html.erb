
<p><%= f.label :email %><br />
<%= f.text_field :email %></p>


<p><%= f.label :password %><br />
<%= f.password_field :password %></p>

<p><%= f.label :password_confirmation %><br />
<%= f.password_field :password_confirmation %></p>

<% if can? :manage, :all %>

<p><%= f.label :role %>
<p>
 <%= f.collection_select :role, User::ROLES, :to_s, :humanize, {:include_blank => true} %></p>
 <p><%= f.label :assigned_hours %>
 	<p>
 <%= f.collection_select :assigned_hours, User::HOURS, :to_s, :humanize, {:include_blank => true} %></p>
<p><%= f.submit "Submit" %></p>
<% end %>